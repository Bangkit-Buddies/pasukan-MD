<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.ProfileFragment">

    <ProgressBar
        android:id="@+id/pb_profile"
        style="?attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/view_profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_temprament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            android:textStyle="italic | bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Active, Energetic, Independent, Intelligent, Gentle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_origin"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_lifespan"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_adaptable"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_affection"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_childfriendly"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_energy"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_intelligence"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_strangerfriendly"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_social_needs"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_health_issue"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="@string/app_name" />

            </com.google.android.material.chip.ChipGroup>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Something Went Wrong!"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>